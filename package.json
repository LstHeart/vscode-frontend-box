{
  "name": "frontend-box",
  "displayName": "frontend-box",
  "description": "VSCode 里订阅查看前端技术文章",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/giscafer/vscode-frontend-box.git"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "frontendBlog",
          "title": "前端盒子",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "frontendBlog": [
        {
          "id": "view.blog",
          "name": "博客"
        },
        {
          "id": "view.other",
          "name": "其他"
        }
      ]
    },
    "commands": [
      {
        "command": "frontend-box.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts  --ignore-path .gitignore",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/_test/runTest.js",
    "deploy": "vsce publish --yarn",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run commitmsg"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix --ext .js",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "mocha": "^7.1.2",
    "prettier": "^2.2.1",
    "typescript": "^3.8.3",
    "vsce": "^1.81.1",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.21.0"
  }
}
